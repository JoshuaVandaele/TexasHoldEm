{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "pyinstaller",
            "args": [
                "./main.spec"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "gen-docs",
            "type": "shell",
            "command": "python",
            "args": [
                "-m", "pdoc", "jeu",
                "-o", "docs",
                "--html",
                "--force",
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}